        "app"
      ],
      "@scripts": [
        "app/scripts"
      ],
      "@ui": [
        "app/scripts/ui"
      ],
      "@asserts": [
        "app/scripts/asserts"
      ],
      "@handlers": [
        "app/scripts/handlers"
      ],
      "@tests": [
        "app/tests"
      ],
      "@test-utils": [
        "app/tests/test-utils"
      ],
      "@utils": [
        "app/scripts/utils.js"
      ],
      "@main": [
        "app/scripts/main.js"
      ],
      "@task": [
        "app/scripts/task.js"
      ],
      "@selectors": [
        "app/scripts/selectors.js"
      ],
      "@html": [
        "app/index.html"
      ],
      "@assets": [
        "app/assets"
      ],
      "@VALID_HTML_TAGS": [
        "app/scripts/constants/VALID_HTML_TAGS.js"
      ]
