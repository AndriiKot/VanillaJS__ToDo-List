{
  "name": "todo-list--vanillajs",
  "version": "2.1.3",
  "type": "module",
  "scripts": {
    "format": "prettier frontend  --config ./config/prettier.config.js --check",
    "format:fix": "prettier frontend  --config ./config/prettier.config.js --write",
    "lint:js": "eslint frontend --config config/eslint.config.js",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:css": "stylelint \"frontend/**/*.css\" --config config/stylelint.config.js",
    "lint:css:fix": "npm run lint:css -- --fix",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix": "npm run lint:js:fix && npm run lint:css:fix",
    "dev": "vite --config config/vite.config.js",
    "build": "vite build --config config/vite.config.js",
    "preview": "vite preview --config config/vite.config.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --config config/jest.config.js",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage",
    "test:failed": "npm run test -- --json --outputFile=.cache/jest-results.json || node tools/jest/printFailedTest.js",
    "prepare": "node tools/prepare.js",
    "deploy": "gh-pages -d dist"
  },
  "devDependencies": {
    "@awmottaz/prettier-plugin-void-html": "^1.9.0",
    "@eslint/js": "^9.28.0",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "eslint": "^9.28.0",
    "globals": "^16.2.0",
    "jest": "^30.0.2",
    "jest-environment-jsdom": "^30.0.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.5.3",
    "stylelint": "^16.23.0",
    "stylelint-config-standard": "^39.0.0",
    "vite": "^6.3.5"
  }
}
